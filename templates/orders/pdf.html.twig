<html>
<head>
    <style>
        table {
            border: 2px solid black;
            border-spacing: 20px;

        }
    </style>
</head>
<body>
<div>
    <h1>Orders</h1>
    <table class="table table-data2">
        <thead>
        <tr>

            <th>Id</th>
            <th>Id User</th>
            <th>Id Pack</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr class="tr-shadow">

                <td>{{ order.id }}</td>
                <td>{{ order.iduser }}</td>
                <td>{{ order.idpack }}</td>
                <td>
                    <span class="block-email">{{ order.status }} </span></td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</body>
</html>
